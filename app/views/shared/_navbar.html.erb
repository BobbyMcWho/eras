<nav class=" bg-slate-900 w-full flex relative justify-between items-center mx-auto px-8 h-20 mb-5">
    <div class="w-full h-full inline-flex justify-between items-center">
        <h1 class="text-xl text-white font-extrabold tracking-wider">Eras</h1>
        <div class="flex h-full flex-row items-center justify-start">
            <p class="text-white mr-2" title="<%= @file_path %>">Errors File: <%= @file_size %></p>
            <%= form_tag(destroy_all_errors_path, class: "mr-2", onSubmit: "return confirm('Do you want to delete your errors file?\nThis will delete both development and test!\nFile: #{@file_path}')" ) do %>
                <button type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                    </svg>
                </button>
            <% end %>
            <form action="<%= errors_path %>">
                <select name="environment" class="h-1/3 rounded" onchange="this.form.submit()" <%= Eras.config.reporting_envs.count == 1 ? 'disabled' : nil %>>
                    <% Eras.config.reporting_envs.each do |env| %>
                        <option value="<%= env %>" <%= @environment == env ? 'selected' : nil%>><%= env %></option>
                    <% end %>
                </select>
            </form>
            <span title="Configure via Eras.config.reporting_envs" class="ml-1">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
                </svg>
            </span>
        </div>
    </div>
</nav>
